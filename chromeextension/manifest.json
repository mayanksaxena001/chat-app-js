{
  "name": "My Extension",
  "version": "1.1",
  "description": "A browser action with a popup for binding the email textfield text with this extension",
  "permissions": [  "activeTab","tabs", "<all_urls>"],
    "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
      "default_title": "My Extension",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
